def function(array, summ):
    i = 0
    j = len(array)-1 #4
    while( i >=0 and j <= len(array)-1 and i!=j):
        if(array[i] + array[j] == summ ):
            print(array[i], array[j])
            i +=1
        else:
            if(array[i] + array[j] < summ ):
                i +=1
            else:
                j -=1 
    return

ans = function([1,3,4,4,5], 8)
